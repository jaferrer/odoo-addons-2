<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- region : portal sitting -->
    <template id="portal_sitting">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <h5 class="mb-0">
                        <span t-field="sitting.training_id.name"/> -
                        <span t-field="sitting.session_id.name"/>
                        <span class="float-right"></span>
                    </h5>
                </t>
                <t t-set="card_body">
                    <div class="row">
                        <!-- summons -->
                        <div class="col-sm">
                            <button class="btn btn-primary fa fa-file-pdf-o"> Your Summons</button>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- endregion : portal sitting -->
    
    <data>

        <record model="ir.ui.view" id="training_sitting_form">
            <field name="name">training_sitting_form</field>
            <field name="model">training.sitting</field>
            <field name="inherit_id" ref="training_base.training_sitting_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="manage_portal_access" type="object" string="Grant portal access" class="btn-primary" groups="base.group_partner_manager"/>
                </header>
            </field>
        </record>

    </data>
    
</odoo>