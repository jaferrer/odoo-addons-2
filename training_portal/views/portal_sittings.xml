<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- region : portal sitting -->
    <template id="portal_sittings">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <h5 class="mb-0">
                        <small class="text-muted"></small><span t-field="sitting.session_id.name"/>
                        <span class="float-right"></span>
                    </h5>
                </t>
                <t t-set="card_body">
                    <div class="row">
                        <div t-if="sitting.date" class="col-12 col-md-6 mb-2 mb-md-0">
                            <h6>Date</h6>
                            <div class="row">
                                <div class="col flex-grow-0 pr-3">
                                    <t t-esc="datetime.datetime.strptime(str(sitting.date), '%Y-%m-%d').strftime('%d %b %Y')" />
                                </div>
                                <div class="col pl-sm-0">
                                    <address t-field="sitting.trainer_id" t-options='{"widget": "contact", "fields": ["name", "email"]}'/>
                                </div>
                            </div>
                        </div>
                        <div t-if="sitting.location_id" class="col-12 col-md-6">
                            <h6>Location</h6>
                            <div class="row">
                                <div class="col pl-sm-0">
                                    <address t-field="sitting.location_id" t-options='{"widget": "contact", "fields": ["name"]}'/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- endregion : portal sitting -->
</odoo>