<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="res_partner_form">
            <field name="name">res_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <sheet position="before">
                    <header>
                        <button name="give_access_to_trainer" string="Give internal access to trainer" type="object" class="btn-primary" attrs="{'invisible': ['|', ('is_trainer', '=', False), ('user_ids', '!=', [])]}" groups="base.group_erp_manager"/>
                    </header>
                </sheet>
            </field>
        </record>

    </data>
</odoo>