<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="rule_portal_partner_location">
            <field name="name">Partner location : Access to read information of Partner (type=location)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('is_training_location', '=', True)]</field>
            <field name="groups" eval="[(6, 0, [ref('base.group_portal')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_portal_partner_trainer">
            <field name="name">Partner Trainer : Access to read information of Partner (type=trainer)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('is_trainer', '=', True)]</field>
            <field name="groups" eval="[(6, 0, [ref('base.group_portal')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="base.res_partner_portal_public_rule" model="ir.rule">
            <field name="name">res_partner: portal/public: read access on my commercial partner</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>