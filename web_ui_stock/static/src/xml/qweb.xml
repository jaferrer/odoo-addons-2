<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

    <t t-name="StockActivity">

        <div>
            <nav class="navbar navbar-dark bg-dark no-margin" role="navigation">
                <div class="container">
                    <div class="row row-flex">
                        <div class="navbar-col col flex-all">
                            <button id="back-btn"
                                    type="button"
                                    class="btn btn-primary button-back-to-choice hidden fa fa-arrow-left"/>
                            <span id="view_title"/>
                        </div>
                        <div class="navbar-col col">
                            <button id="validate_batch"
                                    type="button"
                                    class="btn btn-success btn-margin-left pull-right hidden">
                                Valider
                            </button>
                            <button id="exit-btn" type="button" class="btn btn-danger pull-right">Quitter</button>
                        </div>
                    </div>
                </div>
            </nav>

            <div id="activity-container">
                <!-- Les fragments seront chargés ici -->
            </div>
        </div>
    </t>

    <t t-name="LineNumpad">
            <div class="modal modal-condensed fade" id="numpad-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title"><t t-esc="widget.name"/></h4>
                        </div>
                        <div class="modal-body" >
                            <table class="table table-qty">
                                <thead>
                                    <tr>
                                        <th>Nouvelle quantité</th>
                                        <th id="numpad_new_quantity"/>
                                         <t t-if="widget.qty_todo != None">
                                            <th id="numpad_old_quantity">
                                                <span id="qty-todo">/<t t-esc="widget.qty_todo"/></span>
                                                <span id="qty-unit"><t t-esc="widget.unit"/></span>
                                            </th>
                                         </t>
                                    </tr>
                                </thead>
                            </table>
                            <div class="table-numpad">
                                <div>
                                    <button id="numpad_add_1" class="btn">1</button>
                                </div>
                                <div>
                                    <button id="numpad_add_2" class="btn">2</button>
                                </div>
                                <div>
                                    <button id="numpad_add_3" class="btn">3</button>
                                </div>
                                <div>
                                    <button id="numpad_add_4" class="btn">4</button>
                                </div>
                                <div>
                                    <button id="numpad_add_5" class="btn">5</button>
                                </div>
                                <div>
                                    <button id="numpad_add_6" class="btn">6</button>
                                </div>
                                <div>
                                    <button id="numpad_add_7" class="btn">7</button>
                                </div>
                                <div>
                                    <button id="numpad_add_8" class="btn">8</button>
                                </div>
                                <div>
                                    <button id="numpad_add_9" class="btn">9</button>
                                </div>
                                <div>
                                    <button id="numpad_add_0" class="btn">0</button>
                                </div>
                                <div>
                                    <button id="numpad_add_coma" class="btn">,</button>
                                </div>
                                <div>
                                    <button id="numpad_backspace" class="btn">
                                        <img alt="Retour arrière"
                                             src="/web_ui_stock_product/static/src/img/backspace.png"
                                             width="24" height="21"/>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="exit_numpad" class="btn btn-default">Annuler</button>
                            <button type="button" id="validate_new_qty" class="btn btn-primary">Confirmer</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>

</templates>