<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_multi_discount_product_template_form_view" model="ir.ui.view">
        <field name="name">pos_multi_discount_product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="available_in_pos" position="after">
                <field name="is_pos_discount" attrs="{'invisible':[('available_in_pos', '=', False)]}"/>
                <field name="discount_pc" attrs="{'invisible':[('is_pos_discount', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>