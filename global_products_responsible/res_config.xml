<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_config_product_form" model="ir.ui.view">
            <field name="name">res_config_product_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="product.res_config_settings_view_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='product_general_settings']" position="after">
                    <div class="row mt16 o_settings_container" id="products_responsible_configuration">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="global_products_responsible_id" string="Products Responsible"/>
                                <div class="text-muted">
                                    Choose a responsible for products configuration
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="global_products_responsible_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>