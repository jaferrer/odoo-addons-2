<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="public_holiday_search_view" model="ir.ui.view">
        <field name="name">public_holiday_search_view</field>
        <field name="model">hr.public.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="year"/>
                <field name="area"/>
            </search>
        </field>
    </record>

    <record id="public_holiday_tree_view" model="ir.ui.view">
        <field name="name">public_holiday_tree_view</field>
        <field name="model">hr.public.holiday</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="date" widget="date"/>
                <field name="year"/>
                <field name="area"/>
            </tree>
        </field>
    </record>

    <!--Menu Congés/Configuration-->
    <record id="hr_holidays.menu_hr_holidays_configuration" model="ir.ui.menu">
        <field name="action"/>
    </record>

    <menuitem
            id="menu_hr_holidays_type"
            name="Type"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="0"
            groups="hr_holidays.group_hr_holidays_manager"
            action="hr_holidays.open_view_holiday_status"/>

    <record id="open_view_public_holiday" model="ir.actions.act_window">
        <field name="name">Jours fériés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.public.holiday</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_create_holiday_from_public_holiday" model="ir.actions.act_window">
        <field name="name">Création des congés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.public.holiday.create</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="action_create_holiday_from_public_holiday_ir_values">
        <field name="name">Création des congés</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' +str(ref('action_create_holiday_from_public_holiday'))" />
        <field name="key">action</field>
        <field name="model">hr.public.holiday</field>
    </record>

    <menuitem
            id="menu_hr_holidays_public"
            name="Jours fériés"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="10"
            groups="hr_holidays.group_hr_holidays_manager"
            action="open_view_public_holiday"/>

    <!--Cron-->
    <record model="ir.cron" id="update_public_holidays_cron">
        <field name="name">Jours fériés</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="active" eval="True"/>
        <field name="priority">5</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall">2020-01-01 04:00:00</field>
        <field name="numbercall">-1</field>
        <field name="doall"/>
        <field name="model">hr.public.holiday</field>
        <field name="function">download_public_holidays</field>
        <field name="args"/>
    </record>

    <record id="public_holiday_create_form" model="ir.ui.view">
        <field name="name">public_holiday_create_form</field>
        <field name="model">hr.public.holiday.create</field>
        <field name="arch" type="xml">
            <form name="Création des congés">
                <group>
                    <field name="year"/>
                    <field name="holiday_status_id"/>
                    <field name="mode"/>
                    <field name="by_type"/>
                    <field name="employee_ids" widget="many2many_checkboxes" attrs="{'invisible': [('by_type', '!=', 'employee')]}"/>
                    <field name="department_ids" widget="many2many_checkboxes"  attrs="{'invisible': [('by_type', '!=', 'department')]}"/>
                    <field name="auto_confirm_holiday"  attrs="{'invisible': [('mode', '!=', 'add')]}"/>
                    <field name="delete_refuse" attrs="{'invisible': [('mode', '!=', 'refuse')]}"/>
                </group>
            </form>
        </field>
    </record>

</odoo>