<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_location_with_project_view_location_form" model="ir.ui.view">
        <field name="name">stock_location_with_project_view_location_form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="attrs">{'readonly': [('project_id', '!=', False)]}</attribute>
                </field>
                <field name="location_id" position="attributes">
                    <attribute name="attrs">{'readonly': [('project_id', '!=', False)]}</attribute>
                </field>
                <xpath expr="//h2[field[@name='location_id']]" position="after">
                    <label for="project_id"/>
                    <h3><field name="project_id"/></h3>
                </xpath>
        </field>
    </record>
</odoo>