<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="stock_picking_type_form">
            <field name="name">stock_picking_type_form</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="show_on_dashboard"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_type_search">
            <field name="name">stock_picking_type_search</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_pickingtype_filter"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <filter name="inactive" position="after">
                    <filter string="Main Operations" name="main_operations" domain="[('show_on_dashboard', '=', True)]"/>
                </filter>
            </field>
        </record>

        <record model="ir.actions.act_window" id="stock.stock_picking_type_action">
            <field name="context">{'search_default_main_operations': True}</field>
        </record>

    </data>
</odoo>