<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="stock_quick_move_wizard_form">
            <field name="name">stock_quick_move_wizard_form</field>
            <field name="model">stock.quick.move.wizard</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="location_src_id"/>
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <field name="picking_type_id"/>
                                <field name="validate_picking"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('location_src_id', '=', False)]}">
                            <group>
                                <field name="product_id"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('product_id', '=', False)]}">
                            <group>
                                <field name="lot_id"/>
                                <label for="product_qty"/>
                                <div class="o_row">
                                    <field name="product_qty"/> /
                                    <field name="available_qty"/>
                                    <field name="product_uom_id"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Apply" name="apply" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>