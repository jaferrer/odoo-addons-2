<template>
    <t t-name="Timeline2.View">
        <div class="oe_timeline2_view">
            <div class="oe_timeline2_buttons btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group btn-sm" role="group">
                    <button class="btn btn-default oe_timeline_button_today">Today</button>
                </div>
                <div class="btn-group btn-sm scale_button" role="group">
                    <button class="btn btn-default oe_timeline_button_scale_day">Day</button>
                    <button class="btn btn-default oe_timeline_button_scale_week">Week</button>
                    <button class="btn btn-default oe_timeline_button_scale_month">Month</button>
                    <button class="btn btn-default oe_timeline_button_scale_year">Year</button>
                </div>
                <div class="btn-group btn-sm" role="group">
                    <button id="swap_button" class="btn btn-default fa fa-retweet o_hidden">Swap</button>
                </div>
                <div class="btn-group btn-sm" style="float: right;">
                    <button class="fa fa-chevron-left btn btn-icon timeline2_pager_previous"/>
                    <button class="fa fa-chevron-right btn btn-icon timeline2_pager_next"/>
                </div>
            </div>
            <div id="timeline2_drag_item" class="btn-group btn-sm o_hidden"/>
            <div class="oe_timeline2_widget"/>
        </div>
    </t>
    <t t-name="Timeline2.DefaultItemTemplate">
        <div class="arrow arrow-left">
            <i class="fa fa-caret-left"></i>
        </div>
        <div class="vis-item-title span">
            <span>
                <i class="fa fa-times del"></i>
                <t t-esc="item.evt.display_name" />
            </span>
        </div>
        <div class="arrow arrow-right">
            <i class="fa fa-caret-right"></i>
        </div>
    </t>
</template>
