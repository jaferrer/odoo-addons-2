<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

    <t t-name="BatchMainWidget">

        <nav class="navbar navbar-dark bg-dark no-margin" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-col col-6">
                        <span id="view_title"/>
                    </div>
                    <div class="navbar-col col-6">
                        <button id="validate_batch"
                                type="button"
                                class="btn btn-success btn-margin-left pull-right hidden">
                            Valider
                        </button>
                        <button id="btn_exit" type="button" class="btn btn-danger pull-right">Quitter</button>
                    </div>
                    <div class="navbar-col col-12" id="scan_batch_printer_choice"></div>
                </div>
            </div>
        </nav>

        <div class="jumbotron">
            <div id="big_helper" class="container">
                <h1>Préparations par lots</h1>
                <p>Veuillez sélectionner un lot de pickings pour commencer</p>
            </div>

            <div id="manual_scan_location" class="container hidden">
                <h4 id="#scan_location_classic">Veuillez scanner l'emplacement demandé ou le saisir à la main</h4>
                <h4 id="#scan_location_change" class="hidden">Veuillez scanner l'emplacement souhaité ou le saisir à la main</h4>
                <div class="input-group">
                    <input id="search_location" type="text" class="form-control"
                           placeholder="Saisie emplacement manuel"/>
                    <span class="input-group-btn">
                        <button id="clear_search_location" class="btn btn-danger" type="button">x</button>
                    </span>
                </div>
            </div>

            <div id="helper_location" class="container hidden">
                <div class="waiting-background">
                    <h4>Veuillez valider l'emplacement pour continuer</h4>
                    <h4>Ou</h4>
                    <h4>Vous pouvez le modifier s'il y a une erreur d'inventaire</h4>
                </div>
            </div>

            <div id="manual_scan_product" class="container hidden">
                <h4>Veuillez scanner l'article demandé</h4>
                <p id="manual_scan_add_qty_1" class="hidden">
                    Vous pouvez scanner le même article plusieurs fois pour augmenter la quantité
                </p>
                <p id="manual_scan_add_qty_2" class="hidden">Ou</p>
                <p id="manual_scan_add_qty_3" class="hidden">Utiliser le pavé numérique</p>
                <div class="input-group">
                    <input id="search_product" type="text" class="form-control"
                           placeholder="Saisie article manuel"/>
                    <span class="input-group-btn">
                        <button id="clear_search_product" class="btn btn-danger" type="button">x</button>
                    </span>
                </div>
            </div>

            <div id="manual_scan_lot" class="container hidden">
                <div class="waiting-background">
                    <h4>
                        Cet article est rattaché à un numéro de lot/série. Merci de scanner ce numéro pour continuer
                    </h4>
                    <div class="input-group">
                        <input id="search_product_lot" type="text" class="form-control"
                               placeholder="Saisie numéro de lot/série manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_product_lot" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>
            </div>

            <div id="manual_scan_picking" class="container hidden">
                <h4>Veuillez scanner le picking demandé</h4>
                <div class="input-group">
                    <input id="search_picking" type="text" class="form-control"
                           placeholder="Saisie transfert manuel"/>
                    <span class="input-group-btn">
                        <button id="clear_search_îcking" class="btn btn-danger" type="button">x</button>
                    </span>
                </div>
            </div>

            <div id="batch_scan_done" class="container hidden">
                <h4>Lot terminé!</h4>
            </div>
        </div>

        <div class="container">
            <div  class="table-responsive"  id="batch_selection_table">
                <table class="table">
                    <thead id="batch_selection_table_header">
                        <tr>
                            <th>Nom</th>
                            <th>Responsable</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="batch_selection_table_body"/>
                </table>
            </div>

            <div  class="table-responsive hidden"  id="move_line_table">
            <table class="table">
                <thead id="move_line_table_header">
                    <tr>
                        <th>Emplacement</th>
                        <th id="change_location_header" class="hidden">Modifier</th>
                        <th id="confirm_location_header" class="hidden">Valider</th>
                        <th>Article</th>
                        <th>N° de lot/série</th>
                        <th>Quantité</th>
                        <th>Unité</th>
                        <th id="change_qty_header" class="hidden">Ajuster</th>
                        <th id="confirm_qty_header" class="hidden">Valider</th>
                        <th>Picking</th>
                    </tr>
                </thead>
                <tbody id="move_line_table_body"/>
            </table>
            </div>

            <div class="hidden" id="need_for_lot"/>

            <div class="hidden" id="quantity_numpad"/>

        </div>
    </t>

    <t t-name="BatchSelectionTable">
        <tr t-att-product_id="widget.id" id="batch_selection_row">
            <td>
                <t t-esc="widget.picking_batch.name"/>
            </td>
            <td>
                <t t-esc="widget.picking_batch.user"/>
            </td>
            <td>
                <t t-esc="widget.picking_batch.date"/>
            </td>
            <td>
                <button type="button" class="btn btn-primary js_select_batch">Sélectionner</button>
            </td>
        </tr>
    </t>

    <t t-name="BatchMoveLineRow">
        <tr t-att-product_id="widget.id" id="batch_selection_row">
            <td id="move_line_location" class="text-warning font-weight-bold">
                <t t-esc="widget.move_line.location"/>
            </td>
            <td id="change_location_body" class="hidden">
                <button type="button" class="btn btn-primary js_change_location fa fa-cubes hidden"/>
            </td>
            <td id="confirm_location_body" class="hidden">
                <button type="button" class="btn btn-success js_confirm_location fa fa-check hidden"/>
            </td>
            <td id="move_line_product">
                <t t-esc="widget.product.name"/>
            </td>
            <td id="move_line_lot">
                <t t-esc="widget.product.lot_name"/>
            </td>
            <td id="move_line_quantity">
                <t t-esc="widget.display_qty"/>
            </td>
            <td id="move_line_uom">
                <t t-esc="widget.move_line.product_uom"/>
            </td>
            <td id="change_qty_body" class="hidden">
                <button type="button" class="btn btn-primary js_open_numpad fa fa-calculator hidden"/>
            </td>
            <td id="confirm_qty_body" class="hidden">
                <button type="button" class="btn btn-success js_confirm_qty fa fa-check hidden"/>
            </td>
            <td id="move_line_picking">
                <t t-esc="widget.move_line.picking"/>
            </td>
        </tr>
    </t>

    <t t-name="BatchMoveLineLot" class="hidden" id="need_for_lot_view">
        <div>
            <table id="product_lot_table" class="table">
                <thead id="product_lot_table_header">
                    <tr>
                        <th>Nom</th>
                        <th>Code</th>
                        <th>Méthode de suivi</th>
                        <th id="invalid_lot_number_header" class="hidden text-danger">Numéro de lot/série invalide</th>
                    </tr>
                </thead>
                <tbody id="product_lot_table_body">
                    <tr>
                        <td>
                            <t t-esc="widget.batchMoveLineRow.product.name"/>
                        </td>
                        <td>
                            <t t-esc="widget.batchMoveLineRow.product.default_code"/>
                        </td>
                        <td>
                            <t t-esc="widget.batchMoveLineRow.product.tracking"/>
                        </td>
                        <td id="invalid_lot_number_col" class="hidden text-danger">
                            <t t-esc="widget.invalid_number"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>

</templates>
