<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="account_invoice_confirm_set_number_form">
            <field name="name">account_invoice_confirm_set_number_form</field>
            <field name="model">account.invoice.confirm.set.number</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="done" invisible="1"/>
                        <field name="invoice_id" invisible="1"/>
                        <field name="force_number" attrs="{'readonly': [('done', '=', True)]}" required="1"/>
                    </group>
                    <footer class="oe_edit_only">
                        <button name="apply" string="Apply" type="object" class="btn btn-sm btn-primary"/>
                        or
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>