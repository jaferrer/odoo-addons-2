        </record>

        <record id="value_change_number_or_date_for_validated_invoices" model="ir.values">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">account.invoice</field>
            <field name="name">Change date or number (open or paid invoices)</field>
            <field name="value" eval="'ir.actions.server,' + str(action_change_number_or_date_for_validated_invoices)"/>
        </record>

        <record id="action_define_number_and_confirm" model="ir.actions.server">
            <field name="name">Define number and confirm</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="state">code</field>
