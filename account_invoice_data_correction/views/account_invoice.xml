<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_change_type_for_draft_invoices" model="ir.actions.server">
            <field name="name">Change type</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="state">code</field>
            <field name="groups_id" eval="[(6, 0, [ref('account_invoice_data_correction.group_invoice_data_correction')])]"/>
            <field name="code">action = model.browse(context['active_ids']).change_type_for_draft_invoices()</field>
        </record>

        <record id="value_change_type_for_draft_invoices" model="ir.values">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">account.invoice</field>
            <field name="name">Change type</field>
            <field name="value" eval="'ir.actions.server,' + str(action_change_type_for_draft_invoices)"/>
        </record>

