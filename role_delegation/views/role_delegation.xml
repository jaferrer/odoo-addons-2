<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="role_delegation_form" model="ir.ui.view">
        <field name="name">role_delegation_form</field>
        <field name="model">res.users.role.delegation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="role_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="target_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="role_delegation_tree" model="ir.ui.view">
        <field name="name">role_delegation_tree</field>
        <field name="model">res.users.role.delegation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="target_id"/>
                <field name="role_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>
</odoo>