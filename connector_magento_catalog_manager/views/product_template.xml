<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="connector_magento_product_template_only_form_view" model="ir.ui.view">
        <field name="name">connector_magento_product_template_only_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Connectors" name="connector">
                    <group string="Magento Bindings">
                        <field name="magento_product_bind_ids" nolabel="1">
                            <tree>
                                <field name="backend_id"/>
                                <field name="product_type"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>