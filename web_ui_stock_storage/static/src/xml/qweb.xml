<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

      <t t-name="StorageSelection">

        <div class="jumbotron">
            <div id="big_helper" class="container">
                <h1>Rangement de chariot</h1>
                <p>Veuillez sélectionner un bon de rangement pour commencer</p>
            </div>
        </div>

        <div class="container">

            <div class="row">
                <p class="button-group text-right col-md-12" id="mass_btn" role="group">
                    <button class="btn btn-primary float-right" id="no-picking-btn" type="button">
                        Rangement sans bon <span class="fa fa-play-circle"></span>
                    </button>
                </p>
            </div>

             <div class="row">
                 <div class="col-md-12 ">
            <table id="picking_selection_table" class="table ui_stock_table  table-condensed table-hover">
                <tbody id="picking_selection_table_body">

                    <t t-foreach="widget.pickingList" t-as="picking">
                        <tr t-att-data-picking_id="picking.id" class="picking-item ui_stock_item">
                            <td class="main-col">
                                <p>
                                    <t t-esc="picking.name"/>
                                </p>
                                <p class="text-muted">
                                    <t t-esc="picking.user"/>
                                </p>
                            </td>
                            <td>
                                <p>
                                    <t t-esc="picking.operation_count"/>
                                    produits
                                </p>
                            </td>
                        </tr>
                    </t>

                </tbody>
            </table>
             </div>
             </div>
        </div>
    </t>

    <t t-name="StorageNavigate">
        <div>
            <div class="jumbotron alert-info">
                <div class="container text-center">
                    <strong>
                        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <span id="info-text"></span>
                    </strong>
                </div>
            </div>

            <div class="container">
                <div class="row picking-nav">

                    <t t-if='widget.moveLine'>

                        <div class="col-xs-12 picking-flex">
                            <div>
                                 <p id="picking-product">
                                     <t t-esc="widget.moveLine.name"/>
                                </p>
                                 <p id="picking-location">
                                    <t t-esc="widget.moveLine.location_id"/>
                                </p>
                                <p id="picking-quantity">
                                    <t t-esc="widget.moveLine.default_code"/>
                                </p>
                            </div>
                            <div id="picking-qty">
                                <span id="picking-qty-done"><t t-esc="widget.moveLine.qty_done"/></span>
                                <span>/<t t-esc="widget.moveLine.qty"/></span>
                            </div>
                        </div>
                    </t>

                    <t t-if='widget.showManualInput'>
                        <div class="col-xs-12">
                            <input type="text" id="search-code" name="search-code" class="form-control" placeholder="Saisie manuelle"/>
                        </div>
                    </t>
                </div>
            </div>

            <t t-if='widget.moveLine'>

                <div class="container bottom-container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="btn-group dropup btn-navigation-action">
                              <button type="button" class="btn btn-info" id="skip-move-line-btn" style="flex-grow:1;">Annuler et passer ce produit</button>
                              <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                              </button>
                              <ul class="dropdown-menu dropdown-menu-right">
                                <li><a type="button" id="end-navigation-btn">Terminer</a></li>
                              </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>


    <t t-name="NeedUserAttentionModal">
        <div id="content_need_need_user_action" class="container">
            <div class="row">
                <button id="validate_need_user_action_modal" type="button" class="btn btn-primary">
                    OK
                </button>
                <button type="button" id="exit_need_user_action_modal"
                        class='btn btn-danger js_quit_detail fa fa-box pull-right'>
                    Quitter
                </button>
            </div>
            <t t-if="widget.display_cn23_message">
                <div class="row">
                    <div class="jumbotron">
                        <p>Veuillez vérifier que l'imprimante A4 est allumée</p>
                    </div>
                </div>
            </t>
            <t t-if="widget.display_other_pickings">
                <div class="row">
                    <div class="jumbotron">
                        <p>Veuillez rassembler les colis suivants</p>
                        <ul>
                            <t t-foreach="widget.other_pickings" t-as="other_picking">
                                <li>
                                    <t t-esc="other_picking"/>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </div>
    </t>

    <t t-name="StorageMainWidget">

         <nav class="navbar navbar-dark bg-dark no-margin" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-col col-xs-6">
                        <button id="back_to_handling_screen"
                                type="button"
                                class="btn btn-primary button-back-to-choice hidden fa fa-arrow-left"/>
                        <span id="view_title"/>
                        <span id="display_picking" style="color:white;"/>
                    </div>
                    <div class="navbar-col col-xs-6">
                        <button id="validate_scan"
                                type="button"
                                class="btn btn-success btn-margin-left pull-right js_validate_scan">
                            Valider
                        </button>
                        <button id="btn_exit" type="button" class="btn btn-danger pull-right">Quitter</button>
                    </div>
                     <div class="navbar-col col-xs-12" id="storage_printer_choice"></div>
                </div>
            </div>
        </nav>

        <div class="template-container">

            <div class="jumbotron">

                <div id="big_helper" class="container">
                    <h1>Rangement de chariot</h1>
                    <p>Veuiller scanner un bon de rangement pour commencer</p>
                </div>
                <div id="manual_scan" class="container">
                    <h4>Vous pouvez scanner un bon de rangement ou le saisir à la main!</h4>
                    <div class="input-group">
                        <input id="search_picking" type="text" class="form-control"
                               placeholder="Saisie picking manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_picking" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>
                <div id="manual_product_scan" class="container">
                    <h4>Vous pouvez scanner un produit ou le saisir à la main!</h4>
                    <div class="input-group">
                        <input id="search_product" type="text" class="form-control"
                               placeholder="Saisie produit manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_product" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>
                <div id="manual_location_scan" class="container">
                     <div>
                        <h4 id="scan_location_classic">Veuillez scanner l'emplacement demandé ou le saisir à la main</h4>
                        <h4 id="scan_location_change" class="hidden">Veuillez scanner l'emplacement souhaité ou le saisir à la main</h4>
                        <div class="input-group">
                            <input id="search_location" type="text" class="form-control"
                                   placeholder="Saisie emplacement manuel"/>
                            <span class="input-group-btn">
                                <button id="clear_search_location" class="btn btn-danger" type="button">x</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div id="helper_location" class="container hidden">
                    <div class="waiting-background">
                        <h4>Veuillez valider l'emplacement pour continuer</h4>
                        <h4>Ou</h4>
                        <h4>Vous pouvez le modifier s'il y a une erreur d'inventaire</h4>
                    </div>
                </div>
                <div id="manual_tracking_scan" class="container">
                    <h4>Vous pouvez scanner un numéro de lot/série ou le saisir à la main!</h4>
                    <div class="input-group">
                        <input id="search_tracking" type="text" class="form-control"
                               placeholder="Saisie numéro manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_tracking" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="container">

                <ul id="breadcrumb" class="breadcrumb">
                    <li id="wait_product" class="breadcrumb-item">Attente article</li>
                    <li id="wait_tracking" class="breadcrumb-item hidden">Attente numéro de série/lot</li>
                    <li id="wait_location" class="breadcrumb-item">Attente emplacement</li>
                    <li id="confirm_product" class="breadcrumb-item">Confirmation article</li>
                    <li id="confirm_quantity" class="breadcrumb-item">Confirmation saisie</li>
                </ul>

                <div id="error">
                    <span id="error_text" class="text-danger"/>
                </div>

                <div id="screen">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item hidden" id="span_product_code">
                            <span class="bold">Code produit:</span>
                            <span id="product_code"/>
                        </li>
                        <li class="list-group-item hidden" id="span_product_name">
                            <span class="bold">Produit:</span>
                            <span id="product_name"/>
                        </li>
                        <li class="list-group-item hidden" id="span_product_num_lot">
                            <span class="bold">Numéro de lot/série:</span>
                            <span id="product_num_lot"/>
                        </li>
                        <li class="list-group-item hidden" id="span_product_location">
                            <span class="bold">Emplacement:</span>
                            <span id="location">
                                <button type="button" class="btn btn-primary js_change_location fa fa-cubes hidden"/>
                                <button type="button" class="btn btn-success js_confirm_location fa fa-check hidden"/>
                            </span>
                            <ul id="storage_table_body"/>
                        </li>
                        <li class="list-group-item hidden" id="span_product_qty">
                            <span class="bold">Quantité demandée:</span>
                            <span id="qty"/>
                        </li>
                        <li class="list-group-item hidden" id="span_product_qty_saisie">
                            <span class="bold">Quantité saisie:</span>
                            <span id="qty_saisie"/>
                            <button type="button" id="open_numpad"
                                class='btn btn-primary js_open_numpad fa fa-calculator hidden'/>
                        </li>
                    </ul>
                </div>

                <div class="hidden" id="need_user_action_modal_hook"/>
            </div>
        </div>
    </t>

    <t t-name="StorageTableRow">
        <li>
            <t t-esc="widget.picking.location_id"/>
        </li>
    </t>

    <t t-name="StorageRow.Error">
        <tr class="danger" data-error-row="1">
            <td>
                <t t-esc="widget.error.title"/>
            </td>
            <td>
                <t t-esc="widget.error.message"/>
            </td>
            <td>
                <button type="button" class='btn btn-danger js_delete_picking fa fa-trash'/>
            </td>
        </tr>
    </t>

</templates>
