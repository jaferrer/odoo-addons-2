<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_ssh" model="ir.module.category">
            <field name="name">SSH</field>
            <field name="sequence" eval="20"/>
        </record>

        <record id="group_ssh_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_ssh"/>
        </record>

        <record id="group_ssh_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_ssh"/>
            <field name="implied_ids" eval="[(4, ref('server_ssh_keys.group_ssh_user'))]"/>
        </record>

        <record id="ir_rule_edit_own_key" model="ir.rule">
            <field name="name">ir.rule.edit.own.key</field>
            <field name="model_id" ref="model_ssh_key"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('server_ssh_keys.group_ssh_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="ir_rule_manager_all_keys" model="ir.rule">
            <field name="name">ir.rule.manager.all.keys</field>
            <field name="model_id" ref="model_ssh_key"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('server_ssh_keys.group_ssh_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="ir_rule_see_all_keys" model="ir.rule">
            <field name="name">ir.rule.see.all.keys</field>
            <field name="model_id" ref="model_ssh_key"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('server_ssh_keys.group_ssh_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>