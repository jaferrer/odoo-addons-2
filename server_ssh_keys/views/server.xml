<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="ssh_server_tree">
            <field name="name">ssh_server_tree</field>
            <field name="model">ssh.server</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ssh_server_form">
            <field name="name">ssh_server_form</field>
            <field name="model">ssh.server</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <label for="name" class="oe_edit_only"/>
                            <h1 class="mt0">
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group name="data_links">
                            </group>
                        </group>
                        <separator string="Allowed Users"/>
                        <field name="allowed_user_ids">
                            <tree editable="bottom">
                                <field name="user_id"/>
                                <field name="role_id"/>
                            </tree>
                        </field>
                        <separator string="Notes"/>
                        <field name="note" widget="bootstrap_markdown"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_ssh_servers">
            <field name="name">SSH Servers</field>
            <field name="res_model">ssh.server</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_ssh_repository" name="SSH Repository"
                  parent="menu_ssh" sequence="10"/>

        <menuitem id="menu_ssh_servers" name="SSH Servers" action="act_window_ssh_servers"
                  parent="menu_ssh_repository" sequence="10"/>

    </data>
</odoo>