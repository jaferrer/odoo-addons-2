<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.rule" id="ir_rule_rida_users">
            <field name="name">User Access to RIDA</field>
            <field name="model_id" ref="rida_report.model_rida_report"/>
            <field name="domain_force">['|', ('auth_mode', '=', 'public'), ('user_ids', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record model="ir.rule" id="ir_rule_rida_line_users">
            <field name="name">User Access to RIDA Lines</field>
            <field name="model_id" ref="rida_report.model_rida_line"/>
            <field name="domain_force">['|', ('report_id.auth_mode', '=', 'public'), ('report_id.user_ids', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>