<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Allows the create of a public filter to delete it -->
    <record id="ir_filter_delete_own_public_rule" model="ir.rule">
        <field name="name">ir.filter.own.public.rule.delete</field>
        <field name="model_id" ref="base.model_ir_filters"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>