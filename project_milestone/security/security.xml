<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.rule" id="project_milestone_members_rule">
            <field name="name">Milestones: project following required for portal users</field>
            <field name="model_id" ref="model_project_milestone"/>
            <field name="domain_force">['|',
                ('project_id.privacy_visibility', '!=', 'followers'),
                ('project_id.message_partner_ids', 'parent_of', [user.partner_id.id])
                ]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</openerp>