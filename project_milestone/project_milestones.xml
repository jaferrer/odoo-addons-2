<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="project_project_kanban">
            <field name="name">project_project_kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <kanban position="inside">
                    <field name="nb_milestones"/>
                </kanban>
                <div class="o_project_kanban_boxes" position="inside">
                    <div t-if="record.nb_milestones.raw_value" class="o_project_kanban_box">
                        <a name="milestone_tree_view" type="object">
                            <span class="o_value">
                                <t t-esc="record.nb_milestones.value"/>
                            </span>
                            <span class="o_label">Milestones</span>
                        </a>
                    </div>
                </div>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_form_ext">
            <field name="name">project.task.form.ext</field>
            <field name="model">project.task</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id" domain="[('project_id', '=', project_id)]"
                           context="{'default_project_id': project_id}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_tree_ext">
            <field name="name">project_task_tree_ext</field>
            <field name="model">project.task</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_tree">
            <field name="name">project.milestone.tree</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="qualif_should_be_livred_at"/>
                    <field name="should_be_closed_at"/>
                    <field name="project_id"/>
                    <field name="nb_days_tasks"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_search">
            <field name="name">project.milestone.search</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search string="Search Milestone">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="should_be_closed_at"/>
                    <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By...">
                        <filter name="grp_project_id" string="Project" icon="terp-stock_align_left_24" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_form">
            <field name="name">project.milestone.form</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Milestone">
                    <sheet string="Milestone">
                        <div class="oe_button_box" name="button_box">
                            <button name="see_tasks" type="object" groups="base.group_user" class="oe_stat_button"
                                    icon="fa-tasks" string="Tasks">
                                <field name="nb_tasks"/>
                            </button>
                            <button name="toggle_active" type="object" groups="base.group_user" class="oe_stat_button"
                                    icon="fa-archive">
                                <field name="active" sting="Active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group col="2" class="label_30">
                            <group>
                                <field name="referent_id"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="qualif_should_be_livred_at"/>
                                <field name="should_be_closed_at"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tâches" name="task_page">
                                <field name="task_ids" nolabel="1"
                                       context="{'default_project_id': project_id, 'default_milestone_id': active_id}">
                                    <tree nolabel="1" create="false" delete="false">
                                        <field name="number"/>
                                        <field name="name"/>
                                        <field name="user_id"/>
                                        <field name="planned_days" sum="Total"/>
                                        <field name="category_id"/>
                                        <field name="stage_id"/>
                                        <field name="tag_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_milestone_timeline" model="ir.ui.view">
            <field name="name">project.milestone.timeline</field>
            <field name="model">project.milestone</field>
            <field name="type">timeline2</field>
            <field name="arch" type="xml">
                <timeline2 date_start="start_date"
                           date_stop="qualif_should_be_livred_at"
                           default_group_by="project_id"
                           colors="#ec7063: project_id == False;"/>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_kanban">
            <field name="name">project.milestone.kanban</field>
            <field name="model">project.milestone</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="start_date"/>
                    <field name="should_be_closed_at"/>
                    <field name="qualif_should_be_livred_at"/>
                    <field name="nb_tasks"/>
                    <field name="nb_tasks_done"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="pull-right">
                                                <field name="project_id" widget="kanban_label_selection"/>
                                            </div>
                                        </div>
                                    </div>
                                    <h3>
                                        <field name="name"/>
                                    </h3>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <strong>Start:</strong>
                                                    <field name="start_date"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <strong>Qualif:</strong>
                                                    <field name="qualif_should_be_livred_at"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <strong>Prod:</strong>
                                                    <field name="should_be_closed_at"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" name="gauge_row">
                                        <div class="col-sm-6" name="gauge_task">
                                            <a name="see_tasks" type="object">
                                                <field name="nb_tasks_done" widget="gauge"
                                                       style="width:120px;height:90;cursor:pointer;"
                                                       options="{'max_field':'nb_tasks'}">Tâches faites
                                                </field>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="project_milestone_action" model="ir.actions.act_window">
            <field name="name">Milestone</field>
            <field name="res_model">project.milestone</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,timeline2</field>
            <field name="context">{'default_default_grp_project_id': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Milestone.
                </p>
            </field>
        </record>

        <menuitem action="project_milestone_action" id="menu_project_milestone"
                  parent="project.menu_project_management"
                  groups="project.group_project_user" sequence="10"/>

    </data>
</openerp>