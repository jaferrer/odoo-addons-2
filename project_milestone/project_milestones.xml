<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="project_project_kanban">
            <field name="name">project_project_kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <kanban position="inside">
                    <field name="nb_milestones"/>
                </kanban>
                <div class="o_project_kanban_boxes" position="inside">
                    <div t-if="record.nb_milestones.raw_value" class="o_project_kanban_box">
                        <a name="milestone_tree_view" type="object">
                            <span class="o_value">
                                <t t-esc="record.nb_milestones.value"/>
                            </span>
                            <span class="o_label">Milestones</span>
                        </a>
                    </div>
                </div>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_form_ext">
            <field name="name">project.task.form.ext</field>
            <field name="model">project.task</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id" domain="[('project_id', '=', project_id), ('state', '!=', 'closed')]"
                           context="{'default_project_id': project_id}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_tree_ext">
            <field name="name">project_task_tree_ext</field>
            <field name="model">project.task</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_tree">
            <field name="name">project.milestone.tree</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="qualif_should_be_livred_at"/>
                    <field name="should_be_closed_at"/>
                    <field name="project_id"/>
                    <field name="nb_days_tasks"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_search">
            <field name="name">project.milestone.search</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search string="Search Milestone">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="should_be_closed_at"/>
                    <filter name="open" string="Open" domain="[('state', '!=', 'closed')]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" icon="terp-stock_align_left_24" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_form">
            <field name="name">project.milestone.form</field>
            <field name="model">project.milestone</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Milestone">
                    <header>
                        <button name="set_to_livred_in_qualif" type="object" string="Is in Qualification"
                                class="btn-primary" attrs="{'invisible':[('state', '!=', 'open')]}"/>
                        <button name="set_to_livred_in_prod" type="object" string="Is in Production"
                                class="btn-primary" attrs="{'invisible':[('state', '!=', 'in_qualif')]}"/>
                        <button name="close_milestone" type="object" string="Close"
                                class="btn-primary" attrs="{'invisible':[('state', '!=', 'in_prod')]}"/>
                        <button name="reopen" type="object" string="Re-open"
                                class="btn-primary" attrs="{'invisible':[('state', '!=', 'closed')]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet string="Milestone">
                        <div class="oe_button_box" name="button_box">
                            <button name="see_tasks" type="object" groups="base.group_user" class="oe_stat_button"
                                    icon="fa-tasks">
                                <field name="nb_tasks"/>
                            </button>
                        </div>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="qualif_should_be_livred_at"/>
                                <field name="should_be_test_before"/>
                                <field name="should_be_closed_at"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="livred_in_qualif_at"/>
                                <field name="livred_in_prod_at"/>
                            </group>
                            <group>
                                <field name="livred_in_qualif_by"/>
                                <field name="livred_in_prod_by"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="closed_at"/>
                            </group>
                            <group>
                                <field name="closed_by"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="TÃ¢ches" name="task_page">
                                <field name="task_ids" nolabel="1">
                                    <tree nolabel="1" create="false" delete="false">
                                        <field name="name"/>
                                        <field name="user_id"/>
                                        <field name="planned_hours"/>
                                        <field name="priority" widget="priority"/>
                                        <field name="stage_id"/>
                                        <field name="tag_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_milestone_action" model="ir.actions.act_window">
            <field name="name">Milestone</field>
            <field name="res_model">project.milestone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_open': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Milestone.
                </p>
            </field>
        </record>

        <menuitem action="project_milestone_action" id="menu_project_milestone"
                  parent="project.menu_project_management"
                  groups="project.group_project_user" sequence="10"/>

    </data>
</openerp>