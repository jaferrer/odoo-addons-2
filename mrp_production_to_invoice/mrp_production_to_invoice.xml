<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_mrp_production_to_invoice_form_inherit">
            <field name="name">view_mrp_production_to_invoice_form_inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="bom_id" position="after">
                    <field name="manufacturer_id"/>
                    <field name="account_invoice_id"/>
                </field>
            </field>
        </record>

        <record model="ir.actions.server" id="act_server_create_ai_from_of">
            <field name="name">Create an account invoice from manufacturing order</field>
            <field name="model_id" ref="model_mrp_production"/>
            <field name="code">
                action = model.browse(context.get('active_ids')).create_ai_from_of()
            </field>
        </record>

        <record model="ir.values" id="ir_value_create_ai_from_of">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">mrp.production</field>
            <field name="name">Create an account invoice from manufacturing order</field>
            <field name="value" eval="'ir.actions.server,'+str(act_server_create_ai_from_of)"/>
        </record>

        <record model="ir.ui.view" id="view_account_invoice_mrp_form_inherit">
            <field name="name">view_account_invoice_mrp_form_inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="mrp_production_ids" invisible="1"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_production_to_invoice_search">
            <field name="name">view_mrp_production_to_invoice_search</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="inside">
                    <filter string="By manufacturer" name="by_manufacturer" domain="[]" context="{'group_by':'manufacturer_id'}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_production_not_billed_action">
            <field name="name">Not billed manufacturing orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('account_invoice_id', '=', False)]</field>
            <field name="context">{'search_default_by_manufacturer': True}</field>
        </record>
        
        <menuitem action="mrp_production_not_billed_action"
            id="menu_mrp_production_not_billed"
            parent="mrp.menu_mrp_manufacturing"
            sequence="2"/>

        <record model="ir.ui.view" id="view_product_supplierinfo_tree_inherit">
            <field name="name">view_product_supplierinfo_tree_inherit</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="after">
                    <field name="product_id"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>