<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_dunning_invoice_form" model="ir.ui.view">
        <field name="name">account_invoice_dunning_invoice_form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='date_invoice']" position="after">
                <field name="date_next_dunning"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Dunning">
                    <field name="invoice_dunning_ids">
                        <tree>
                            <field name="name"/>
                            <field name="dunning_type_id"/>
                            <field name="date_done"/>
                            <field name="note"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="invoice_tree_dunning_link" model="ir.ui.view">
        <field name="name">account.invoice.dunning.tree.link</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="dunning_number"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.server" id="ir_actions_server_report_relance">
        <field name="name">Create Dunning</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="code">
            action = model.browse(context.get('active_ids')).action_create_dunning()
        </field>
    </record>

    <record model="ir.values" id="ir_value_report_relance">
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="model">account.invoice</field>
        <field name="name">Create Dunning</field>
        <field name="value" eval="'ir.actions.server,'+str(ir_actions_server_report_relance)"/>
    </record>

</odoo>