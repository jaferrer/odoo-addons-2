<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="stock_warehouse_with_calendar_view_form">
            <field name="name">stock.warehouse.with.calendar.view.form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="resource_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="procurement_rule_form_fixed_days">
            <field name="name">procurement.rule.form.fixed.days</field>
            <field name="model">procurement.rule</field>
            <field name="inherit_id" ref="stock.view_procurement_rule_form_stock_inherit"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='group_id']" position="after">
                        <field name="days_of_week" widget="many2many_tags" groups="stock.group_adv_location"
                               options="{'no_create': True, 'no_open': True}"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="working_days_resource_form">
            <field name="name">working.days.resource.form</field>
            <field name="model">resource.resource</field>
            <field name="inherit_id" ref="resource.resource_resource_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <separator string="Resource leaves"/>
                    <field name="leave_ids" context="{'default_calendar_id': calendar_id, 'default_resource_id': id}">
                        <tree editable="top">
                            <field name="name"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

    </data>
</openerp>