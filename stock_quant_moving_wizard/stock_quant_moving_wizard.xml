<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.actions.server" id="act_server_create_stock_operation">
            <field name="name">Create a stock operation</field>
            <field name="model_id" ref="model_stock_quant"/>
            <field name="code">
                action = model.browse(context.get('active_ids')).create_stock_moving_wizard()
            </field>
        </record>

        <record model="ir.values" id="ir_value_create_stock_operation">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">stock.quant</field>
            <field name="name">Create a stock operation</field>
            <field name="value" eval="'ir.actions.server,'+str(act_server_create_stock_operation)"/>
        </record>

        <record model="ir.ui.view" id="view_stock_quant_moving_wizard_form">
            <field name="name">view_stock_quant_moving_wizard_form</field>
            <field name="model">stock.quant.moving.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="location_dest_id" required="1"/>
                    </group>
                    <footer>
                        <button name="create_stock_operation" type="object" string="Validate"/>
                        <button name="cancel" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>