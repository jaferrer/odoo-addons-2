<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="yousign_res_config">
            <field name="name">res config inherited Yousign</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Yousign" string="Yousign" data-key="yousign">
                        <h2>Signature Certifi√©e via Yousign</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_box">
                                <group>
                                    <field name="yousign_api_key"/>
                                    <field name="yousign_webhook"/>
                                    <field name="yousign_staging"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>