<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_task_sequence_view_task_form2">
            <field name="name">project_task_sequence_view_task_form2</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="generate_number"
                            string="Generate a number"
                            type="object"
                            attrs="{'invisible':[('project_task_sequence_id', '=', False)]}"/>
                </header>
                <field name="name" position="before">
                    <field name="display_name" class="oe_read_only"/>
                    <field name="number" attrs="{'invisible':[('project_task_sequence_id', '=', False)]}" class="oe_edit_only"/>
                    <field name="project_task_sequence_id" invisible="1"/>
                </field>
                <field name="name" position="attributes">
                    <attribute name="class">oe_edit_only</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_sequence_view_task_kanban">
            <field name="name">project_task_sequence_view_task_kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban[1]" position="attributes">
                    <attribute name="on_create"/>
                </xpath>
                <field name="user_id" position="before">
                    <field name="number"/>
                </field>
                <xpath expr="//templates//field[@name='name']" position="before">
                    <field name="number"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="project_task_sequence_view_task_tree2">
            <field name="name">project_task_sequence_view_task_tree2</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="number"/>
                </field>
            </field>
        </record>
        <record id="project_task_sequence_view_task_search_form" model="ir.ui.view">
            <field name="name">project_task_sequence_view_task_search_form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="filter_domain">['|', ('number', 'ilike', self), ('name', 'ilike', self)]</attribute>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="project_task_sequence_edit_project">
            <field name="name">project_task_sequence_edit_project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options_active']" position="inside">
                    <div>
                        <field name="use_sequence" class="oe_inline"/>
                        <label for="use_sequence"/>
                    </div>
                </xpath>
                <notebook position="inside">
                    <page string="Sequence" attrs="{'invisible':[('use_sequence', '=', False)]}">
                        <group>
                            <group>
                                <field name="task_sequence_id"
                                       context="{'for_project_tasks':active_id}"
                                       attrs="{'required':[('use_sequence', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="auto_generate_number_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>