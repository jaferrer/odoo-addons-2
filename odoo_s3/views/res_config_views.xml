<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="base_config_settings_view_form_inherit_print" model="ir.ui.view">
            <field name="name">res.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div name="integration" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="s3_storage">
                        <div class="o_setting_left_pane">
                            <field name="module_odoo_s3"/>
                        </div>
                        <div class="o_setting_right_pane" id="div_odoo_s3">
                            <label for="module_odoo_s3"/>
                            <div attrs="{'invisible': [('module_odoo_s3', '=', False)]}">
                                <div class="content-group mt16">
                                    <label for="s3_host" class="o_light_label"/>
                                    <field name="s3_host"/>
                                </div>
                                <div class="content-group mt16">
                                    <label for="s3_region" class="o_light_label"/>
                                    <field name="s3_region"/>
                                </div>
                                <div class="content-group mt16">
                                    <label for="s3_access_key" class="o_light_label"/>
                                    <field name="s3_access_key"/>
                                </div>
                                <div class="content-group mt16">
                                    <label for="s3_secret_key" class="o_light_label"/>
                                    <field name="s3_secret_key"/>
                                </div>
                                <div class="content-group mt16">
                                    <label for="s3_bucket" class="o_light_label"/>
                                    <field name="s3_bucket"/>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box" id="s3_load">
                                    <div class="o_setting_left_pane">
                                        <field name="s3_load"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="s3_load"/>
                                    </div>
                                </div>
                                <div>
                                    <button type="object" name="test_move_filestore_to_s3" string="Test S3 Settings" class="oe_highlight"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
