<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="project_delivery_task_form_ext_milestone">
            <field name="name">project_delivery_task_form_ext_milestone</field>
            <field name="model">project.task</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="project_delivery.project_delivery_task_form_ext"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='delivery_ids']/tree" position="inside">
                    <field name="milestone_id"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="project_milestone_delivery_form">
            <field name="name">project.milestone.delivery.from</field>
            <field name="model">project.delivery</field>
            <field name="inherit_id" ref="project_delivery.project_delivery_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id" attrs="{'readonly':[('state', '=', 'done')]}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>