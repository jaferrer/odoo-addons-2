<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <function model="purchase.order.delete.report" name="delete_report"/>

		<record id="purchase_order_report_aeroo" model="ir.actions.report.xml">
			<field name="name">Quotation / Purchase Order</field>
			<field name="type">ir.actions.report.xml</field>
			<field name="model">purchase.order</field>
			<field name="report_name">purchase.order.report.aeroo</field>
			<field name="auto" eval="True"/>
			<field name="report_type">aeroo</field>
			<field name="report_rml">purchase_order_report_aeroo/purchase_order_report.odt</field>
            <field name="attachment">object.name.replace('/','')</field>
			<field name="tml_source">file</field>
			<field name="in_format">oo-odt</field>
			<field name="out_format" ref="report_aeroo.report_mimetypes_pdf_odt"/>
		</record>

		<record id="value_report_purchase_order_aeroo" model="ir.values">
			<field name="name">purchase.order.report.aeroo</field>
			<field name="key">action</field>
			<field name="key2">client_print_multi</field>
			<field name="model">purchase.order</field>
			<field name="value"
				   eval="'ir.actions.report.xml,'+str(ref('purchase_order_report_aeroo.purchase_order_report_aeroo'))"/>
		</record>

        <function model="purchase.order.delete.report" name="link_report_with_mail"/>
	</data>
</openerp>
