<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="ClientListScreenWidget">
        <t t-jquery='.client-list' t-operation='replace'>
            <table class='client-list'>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Firstname</th>
                        <th>Title</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody class='client-list-contents'>
                </tbody>
            </table>
        </t>
    </t>

    <t t-name="ClientLine">
        <tr class='client-line' t-att-data-id='partner.id'>
            <td><t t-esc='partner.lastname or ""' /></td>
            <td><t t-esc='partner.firstname or ""' /></td>
            <td><t t-esc='partner.title[1] or ""' /></td>
            <td><t t-esc='partner.address' /></td>
            <td><t t-esc='partner.phone or partner.mobile or ""' /></td>
        </tr>
    </t>

    <t t-extend="ClientDetails">
        <t t-jquery="t[t-if='partner.is_company == false']:first" t-operation="replace">
            <t t-if="partner.is_company == false">
                <div t-attf-style="display: #{!partner.is_company ? 'block': 'none'};">
                    <div class="client-detail">
                        <span class='label'>Firstname</span>
                        <span class='detail firstname'><t t-esc='partner.firstname or ""'/></span>
                    </div>
                </div>
            </t>
        </t>
    </t>

    <t t-extend="ClientDetailsEdit">
        <t t-jquery="div.is_person:first" t-operation="replace">
            <div class="is_person" t-attf-style="display: #{!partner.is_company ? 'block': 'none'};">
                <div class='client-detail'>
                    <span class='label'>Firstname</span>
                    <input class='detail firstname person' name="firstname" t-att-value='partner.firstname or ""'/>
                </div>
            </div>
        </t>
    </t>

</templates>
