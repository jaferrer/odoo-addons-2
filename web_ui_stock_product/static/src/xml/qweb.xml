<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

    <t t-name="ScanProductMainWidget">

        <nav class="navbar navbar-dark bg-dark no-margin" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-col col-xs-6">
                        <button id="back_to_handling_screen"
                                type="button"
                                class="btn btn-primary button-back-to-choice hidden fa fa-arrow-left"/>
                        <span id="view_title"/>
                    </div>
                    <div class="navbar-col col-xs-6">
                        <button id="validate_scan"
                                type="button"
                                class="btn btn-success btn-margin-left pull-right js_validate_scan">
                            Valider
                        </button>
                        <button id="btn_exit" type="button" class="btn btn-danger pull-right">Quitter</button>
                    </div>
                    <div class="navbar-col col-xs-12" id="scan_product_printer_choice"></div>
                </div>
            </div>
        </nav>

        <div class="template-container">

            <div class="jumbotron alert-info">
                <div id="big_helper" class="container">
                    <h1>Création de chariot</h1>
                    <p>Veuiller scanner un code barre pour commencer</p>
                </div>
                <div id="manual_scan" class="container">
                    <h4>Vous pouvez scanner un article ou le saisir a la main!</h4>
                    <div class="input-group">
                        <input id="search_product" type="text" class="form-control" placeholder="Saisie article manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_product" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>

                <div id="need_num_lot_scan" class="warning-background hidden">
                    <h4>
                        Cet article est rattaché à un numéro de lot/série. Merci de scanner ce numéro ou de supprimer
                        l'article pour continuer
                    </h4>
                    <div class="input-group">
                        <input id="search_product_lot" type="text" class="form-control"
                               placeholder="Saisie numéro de lot/série manuel"/>
                        <span class="input-group-btn">
                            <button id="clear_search_product_lot" class="btn btn-danger" type="button">x</button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <p class="button-group col-lg-12 text-right" role="group" id="mass_btn">
                        <button type="button" id="btn_delete_all_rows" class="btn btn-danger btn-lg fa fa-trash float-right">
                            Vider la liste
                        </button>
                    </p>

                    <div class="col-md-12 table-responsive">
                        <table id="product_table" class="table table-hover ui_stock_table">
                            <thead id="product_table_header">
                                <tr>
                                    <th class="main-col">Article</th>
                                    <th colspan="2">Qté</th>
                                </tr>
                            </thead>
                            <tbody id="product_table_body"/>
                        </table>
                    </div>

                    <div class="col-md-12 hidden" id="need_for_lot"/>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductTableRow">
        <tr t-att-product_id="widget.id" id="product_row" class="js_open_numpad ui_stock_item">
            <td class="main-col">
                 <p id="product_name">
                     <t t-esc="widget.product.name"/>
                 </p>
                <p id="product_code" class="text-muted">
                    <small>Code: </small><t t-esc="widget.product.default_code"/>
                </p>
                 <p id="lot_name" class="text-muted">
                    <small>Lot: </small><t t-esc="widget.product.lot_name"/>
                </p>
            </td>
             <td class="qty-col">
                <p id="product_quantity">
                    <t t-esc="widget.product.quantity"/>
                </p>
            </td>
            <td>
                <button type="button" class='btn btn-danger js_delete_product fa fa-trash'/>
            </td>
        </tr>
    </t>

    <t t-name="ProductTableRow.Lot" class="hidden" id="need_for_lot_view">
        <div>
            <table id="product_lot_table" class="table">
                <thead id="product_lot_table_header">
                    <tr>
                        <th>Nom</th>
                        <th>Code</th>
                        <th>Méthode de suivi</th>
                        <th id="invalid_lot_number_header" class="hidden text-danger">Numéro de lot/série invalide</th>
                    </tr>
                </thead>
                <tbody id="product_lot_table_body">
                    <tr>
                        <td>
                            <t t-esc="widget.productRow.product.name"/>
                        </td>
                        <td>
                            <t t-esc="widget.productRow.product.default_code"/>
                        </td>
                        <td>
                            <t t-esc="widget.productRow.product.tracking"/>
                        </td>
                        <td id="invalid_lot_number_col" class="hidden text-danger">
                            <t t-esc="widget.invalid_number"/>
                        </td>
                        <td>
                            <button type="button" class='btn btn-danger js_delete_product_lot fa fa-trash'/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>

    <t t-name="ScanProductRow.Error">
        <tr id="error_text" class="danger" data-error-row="1">
            <td>
                <p>
                     <t t-esc="widget.error.title"/>
                </p>
                <p class="text-muted">
                     <t t-esc="widget.error.message"/>
                </p>
            </td>
            <td colspan="2">
                <button type="button" class='btn btn-danger js_delete_product fa fa-trash'/>
            </td>
        </tr>
    </t>

</templates>
