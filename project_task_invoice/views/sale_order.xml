<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="sale_order_task_invoice_form">
        <field name="name">sale_order_form_task_invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="after">
                <field name="wrong_line_tasks_qty" invisible="1"/>
                <div class="alert alert-warning oe_read_only" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible':[('wrong_line_tasks_qty', '=', False)]}">
                    <bold>The amount of the sale lines isn't equal to the planned days's sum of the linked task</bold>
                </div>
            </header>
            <xpath expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']" position="before">
                <field name="initial_tasks_amount"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='state']" position="after">
                <div>
                    <label for="initial_task_ids"/>
                    <field name="initial_task_ids" context="{'tree_view_ref': 'project_task_invoice.task_invoice_tree_private'}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>