<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="assets_backend" name="web_calendar_fixed_colors assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/web_kanban_fold/static/src/js/web_kanban_fold.js"/>
            </xpath>
        </template>

        <record id="project_task_type_fold_simplified" model="ir.ui.view">
            <field name="name">project_task_type_fold_simple</field>
            <field name="model">project.task.type</field>
            <field name="priority" eval="9999"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="fold"/>
                        </group>
                    </group>
                    <footer>
                        <button name="dummy_save" string="Ok" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="open_edit_task_type_simplified" model="ir.actions.act_window">
            <field name="name">Edit Stage</field>
            <field name="res_model">project.task.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="web_kanban_fold.project_task_type_fold_simplified"/>
            <field name="target">new</field>
        </record>

