<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_export_wizard_sftp_form" model="ir.ui.view">
        <field name="name">account_move_export_wizard_sftp_form</field>
        <field name="model">account.move.export.wizard</field>
        <field name="inherit_id" ref="account_move_export.account_move_export_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[field[@name='ftp_path']]" position="after">
                <group name="key" attrs="{'invisible': [('destination', '!=', 'ftp')]}" col="4">
                    <field name="key_type"/>
                    <field name="key"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>