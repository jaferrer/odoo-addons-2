<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="mail.template" id="email_template_training_convocation_to_partner">
            <field name="name">Convocation: send to partner</field>
            <field name="model_id" ref="training_base.model_training_sitting"/>
            <field name="subject">${object.company_id.name} - Convocation</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="partner_to">${ctx.get('partner_to') or False}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${ctx.get('title_name') and ctx.get('title_name') + " " or ""}${ctx.get('partner_name')},
                        <br/><br/>
                        Here is your convocation for training of ${object.get_formatted_date_for_report()}.
                        <br/><br/>
                        Title: ${object.training_id.name}.
                        <br/><br/>
                        % if object.location_id.is_accessible_prm:
                        Location (accessible to people with reduced mobility): ${object.location_id.with_context(contact_address_for_training_mails=True).contact_address}.
                        % endif
                        % if not object.location_id.is_accessible_prm:
                        Location: ${object.location_id.with_context(contact_address_for_training_mails=True).contact_address}.
                        % endif
                        <br/>
                        % if object.location_id.is_remote_training_location and object.remote_url:
                        <br/>
                        Please use <a href="${object.remote_url}">this link</a>
                        <br/>
                        % endif
                        <br/>
                        Hour: from ${object.formatted_start_hour} to ${object.formatted_end_hour}.
                        <br/><br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="True"/>
            <field name="auto_delete" eval="False"/>
        </record>

        <record model="mail.template" id="email_template_training_certificate_to_partner">
            <field name="name">Certificate: send to partner</field>
            <field name="model_id" ref="training_base.model_training_session"/>
            <field name="subject">${object.company_id.name} - Certificat</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="partner_to">${ctx.get('partner_to') or False}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${ctx.get('title_name') and ctx.get('title_name') + " " or ""}${ctx.get('partner_name')},
                        <br/><br/>
                        Here is your certificate.
                        <br/><br/>
                        Title: ${object.training_id.name}.
                        <br/><br/>
                        Best regards,
                        <br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="True"/>
            <field name="auto_delete" eval="False"/>
        </record>

    </data>
</openerp>