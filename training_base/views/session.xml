<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="training_session_tree">
            <field name="name">training_session_tree</field>
            <field name="model">training.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="training_id"/>
                    <field name="trainer_id" groups="training_base.group_training_manager"/>
                    <field name="location_id"/>
                    <field name="nb_attendees"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="training_session_search">
            <field name="name">training_session_search</field>
            <field name="model">training.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search>
                    <field name="training_id"/>
                    <field name="trainer_id" groups="training_base.group_training_manager"/>
                    <field name="location_id"/>
                    <field name="price"/>
                    <field name="attendee_ids"/>
                    <field name="first_sitting_date"/>
                    <field name="last_sitting_date"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_by_training_id" string="Training" domain="[]" context="{'group_by' : 'training_id'}"/>
                        <filter name="group_by_location_id" string="Location" domain="[]" context="{'group_by' : 'location_id'}"/>
                        <filter name="group_by_training_id" string="Training" domain="[]" context="{'group_by' : 'training_id'}"/>
                        <filter name="group_by_state" string="Status" domain="[]" context="{'group_by' : 'state'}"/>
                        <filter name="group_by_first_sitting_date" string="Fist sitting date" domain="[]" context="{'group_by' : 'first_sitting_date'}"/>
                        <filter name="group_by_last_sitting_date" string="Last sitting date" domain="[]" context="{'group_by' : 'last_sitting_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="training_session_form">
            <field name="name">training_session_form</field>
            <field name="model">training.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="training_id" options="{'no_create': True}"/>
                            <field name="trainer_id" options="{'no_create': True}" groups="training_base.group_training_manager"/>
                            <field name="location_id" options="{'no_create': True}"/>
                            <field name="price"/>
                            <field name="nb_mini"/>
                            <field name="nb_maxi"/>
                        </group>
                        <notebook>
                            <page string="Attendees">
                                <button name="send_certificate_to_all" type="object" string="Send certificates to all attendees" confirm="Are you sure? Odoo will send the default text." groups="training_base.group_training_manager"/>
                                <group>
                                    <field name="nb_attendees"/>
                                </group>
                                <field name="attendee_ids" context="{'default_is_attendee': True, 'session_id': id}">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="certificate_sent" invisible="1"/>
                                        <field name="certificate_id" invisible="1" />
                                        <field name="certificate_sent_ids" widget="many2many_tags" invisible="1"/>
                                        <button name="send_mail_certificate" type="object" string="Send certificate" class="btn-primary" attrs="{'invisible': [('certificate_sent', '=', True)]}" groups="training_base.group_training_manager"/>
                                        <button name="send_mail_certificate" type="object" string="Send certificate again" attrs="{'invisible': [('certificate_sent', '=', False)]}" groups="training_base.group_training_manager"/>
                                        <button name="mark_certificate_as_not_sent" type="object" string="Certificate not sent" confirm="Are you sure ?" attrs="{'invisible': [('certificate_sent', '=', False)]}" groups="training_base.group_training_manager"/>
                                        <button name="view_certificate" type="object" string="View certificate" icon="fa-search" attrs="{'invisible': [('certificate_id', '=', False)]}" groups="training_base.group_training_trainer"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sittings">
                                <group>
                                    <field name="first_sitting_date"/>
                                    <field name="last_sitting_date"/>
                                </group>
                                <field name="sitting_ids" context="{'default_session_id': id}">
                                    <field name="trainer_id"/>
                                    <field name="location_id"/>
                                    <field name="date"/>
                                    <field name="start_hour"/>
                                    <field name="end_hour"/>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="training_session_manager_form">
            <field name="name">training_session_manager_form</field>
            <field name="model">training.session</field>
            <field name="inherit_id" ref="training_session_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('training_base.group_training_manager')])]"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="state" position="attributes">
                    <attribute name="readonly">0</attribute>
                    <attribute name="clickable">1</attribute>
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_session">
            <field name="name">Sessions</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">training.session</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_sessions" name="Sessions" action="act_window_session"
                  parent="menu_training_global" sequence="20"/>

    </data>
</openerp>