<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem id="top_menu_training" name="Training" sequence="10" web_icon="training_base,static/img/training.png" />

        <menuitem id="menu_training_global" name="Training" parent="top_menu_training" sequence="10" />

        <record model="ir.ui.view" id="training_training_tree">
            <field name="name">training_training_tree</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="duration"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="training_training_search">
            <field name="name">training_training_search</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="aimed_public"/>
                    <field name="description" />
                    <field name="state"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_by_user_id" string="Responsible" domain="[]" context="{'group_by' : 'user_id'}"/>
                        <filter name="group_by_state" string="State" domain="[]" context="{'group_by' : 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="training_training_form">
            <field name="name">training_training_form</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Training..."/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <div>
                                <label for="duration" />
                                <field name="duration" class="oe_inline" />
                                Duration of a day
                                <field name="duration_hour_day" nolabel="1" class="oe_inline" widget="float_time" />
                                i.e.
                                <field name="total_duration" nolabel="1" class="oe_inline" widget="float_time" /> hours
                            </div>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="nb_mini"/>
                            <field name="nb_maxi"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" widget="html" />
                                    <field name="aimed_public"/>
                                    <field name="training_content" widget="html" />
                                </group>
                            </page>
                            <page string="Sessions" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="session_ids" context="{'default_training_id': id}" attrs="{'readonly': [('state', 'in', ['draft', 'done', 'cancel'])]}"/>
                            </page>
                            <page string="Sittings" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="sitting_ids" attrs="{'readonly': [('state', 'in', ['draft', 'done', 'cancel'])]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_training">
            <field name="name">Trainings</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">training.training</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_trainings" name="Trainings" action="act_window_training"
                  parent="menu_training_global" sequence="10"
        />

    </data>
</openerp>