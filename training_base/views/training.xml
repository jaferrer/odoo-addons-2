<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <menuitem id="top_menu_training" name="Training" sequence="10"/>

        <menuitem id="menu_training_global" name="Training" parent="top_menu_training" sequence="10"/>

        <record model="ir.ui.view" id="training_training_tree">
            <field name="name">training_training_tree</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="duration"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="training_training_search">
            <field name="name">training_training_search</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="aimed_public"/>
                    <field name="description"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_by_user_id" string="Responsible" domain="[]" context="{'group_by' : 'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="training_training_form">
            <field name="name">training_training_form</field>
            <field name="model">training.training</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="duration"/>
                            <field name="price"/>
                            <field name="aimed_public"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Sessions">
                                <field name="session_ids" context="{'default_training_id': id}"/>
                            </page>
                            <page string="Sittings">
                                <field name="sitting_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_training">
            <field name="name">Trainings</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">training.training</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_trainings" name="Trainings" action="act_window_training"
                  parent="menu_training_global" sequence="10"/>

    </data>
</openerp>