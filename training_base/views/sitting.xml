<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="training_sitting_tree">
            <field name="name">training_sitting_tree</field>
            <field name="model">training.sitting</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="training_id"/>
                    <field name="session_id"/>
                    <field name="date"/>
                    <field name="start_hour" widget="float_time"/>
                    <field name="end_hour" widget="float_time"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="training_sitting_search">
            <field name="name">training_sitting_search</field>
            <field name="model">training.sitting</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search>
                    <field name="training_id"/>
                    <field name="session_id"/>
                    <field name="trainer_id"/>
                    <field name="location_id"/>
                    <field name="date"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_by_training_id" string="Training" domain="[]" context="{'group_by' : 'training_id'}"/>
                        <filter name="group_by_session_id" string="Session" domain="[]" context="{'group_by' : 'session_id'}"/>
                        <filter name="group_by_location_id" string="Location" domain="[]" context="{'group_by' : 'location_id'}"/>
                        <filter name="group_by_training_id" string="Training" domain="[]" context="{'group_by' : 'training_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="training_sitting_form">
            <field name="name">training_sitting_form</field>
            <field name="model">training.sitting</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header/>
                    <sheet class="oe_form_sheet_full_screen">
                        <group>
                            <group>
                                <field name="session_id" options="{'no_create': True}"/>
                                <field name="training_id" options="{'no_create': True}"/>
                                <field name="trainer_id" options="{'no_create': True}"/>
                                <field name="location_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="start_hour" widget="float_time"/>
                                <field name="end_hour" widget="float_time"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Attendees">
                                <button name="send_convocation_to_all" type="object" string="Send convocations to all attendees" confirm="Are you sure? Odoo will send the default text." groups="training_base.group_training_manager"/>
                                <group> </group>
                                <field name="attendee_ids" context="{'sitting_id': id}">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="attendance" widget="state_selection" groups="training_base.group_training_trainer"/>
                                        <field name="convocation_sent" invisible="1"/>
                                        <field name="convocation_sent_ids" widget="many2many_tags" invisible="1"/>
                                        <button name="button_set_attendance" type="object" string="Set attendance" icon="fa-check" groups="training_base.group_training_trainer"/>
                                        <button name="button_set_no_attendance" type="object" string="Set no attendance" icon="fa-times" groups="training_base.group_training_trainer"/>
                                        <button name="button_set_attendance_unknown" type="object" string="Set attendance unknown" icon="fa-question" groups="training_base.group_training_trainer"/>
                                        <button name="send_mail_convocation" type="object" string="Send convocation" class="btn-primary" attrs="{'invisible': [('convocation_sent', '=', True)]}" groups="training_base.group_training_manager"/>
                                        <button name="send_mail_convocation" type="object" string="Send convocation again" attrs="{'invisible': [('convocation_sent', '=', False)]}" groups="training_base.group_training_manager"/>
                                        <button name="mark_convocation_as_not_sent" type="object" string="Convocation not sent" confirm="Are you sure ?" attrs="{'invisible': [('convocation_sent', '=', False)]}" groups="training_base.group_training_manager"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_sitting">
            <field name="name">Sittings</field>
            <field name="view_mode">tree,form</field>
            <field name="res_model">training.sitting</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_sittings" name="Sittings" action="act_window_sitting"
                  parent="menu_training_global" sequence="20"/>

    </data>
</openerp>