<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

    <t t-name="StorageHandlingMainWidget">

        <nav class="navbar navbar-dark bg-dark no-margin" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-col col-xs-6">
                        <span id="scan_product_printer_choice"/>
                    </div>
                    <div class="navbar-col col-xs-6">
                        <button id="btn_exit" type="button" class="btn btn-danger pull-right">Quitter</button>
                    </div>
                </div>
            </div>
        </nav>

         <div class="template-container">
             <div id="big_helper" class="jumbotron">
                 <div class="container">
                     <h1 class="text-center">Gestion des chariots</h1>
                     <div class="row text-center">
                         <div class="col-xs-push-1 col-xs-10 col-sm-5">
                             <button id="create_chariot"
                                     type="button"
                                     class="btn btn-primary fa fa-cart-plus choose-button">
                                 Cr√©er un chariot
                             </button>
                         </div>
                         <div class="col-xs-push-1 col-xs-10 col-sm-5">
                             <button id="clean_chariot"
                                     type="button"
                                     class="btn btn-primary fa fa-cubes choose-button">
                                 Ranger un chariot
                             </button>
                         </div>
                     </div>
                 </div>
             </div>

             <div id="ask_for_direct_clean" class="jumbotron hidden">
                 <div class="container">
                     <h1 class="text-center">Souhaitez-vous ranger le chariot <span t-esc="widget.pickingName" class="text-center"/>?</h1>
                     <div class="row text-center">
                         <div class="col-xs-push-1 col-xs-10 col-sm-5">
                             <button id="back_to_choice"
                                     type="button"
                                     class="btn btn-primary ask-direct-clean-button">Non</button>
                         </div>
                         <div class="col-xs-push-1 col-xs-10 col-sm-5">
                             <button id="direct_clean"
                                     type="button"
                                     class="btn btn-primary ask-direct-clean-button">Oui</button>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
    </t>

</templates>
