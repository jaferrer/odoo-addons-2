<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_export_wizard_form" model="ir.ui.view">
        <field name="name">account_move_export_wizard_form</field>
        <field name="model">account.move.export.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="destination"/>
                        <field name="line_selection"/>
                        <field name="journal_ids" attrs="{'invisible': [('line_selection', '=', 'manual')]}"
                               widget="many2many_tags"/>
                        <field name="move_ids" attrs="{'invisible': [('line_selection', '!=', 'manual')], 'required': [('line_selection', '=', 'manual')]}"
                               widget="many2many_tags"/>
                    </group>
                    <group attrs="{'invisible': [('line_selection', '!=', 'bounded')]}" col="4">
                        <field name="date_from" attrs="{'required': [('line_selection', '=', 'bounded')]}"/>
                        <field name="date_to" attrs="{'required': [('line_selection', '=', 'bounded')]}"/>
                    </group>
                    <group>
                        <field name="group_by_account"/>
                    </group>
                    <group attrs="{'invisible': [('destination', '!=', 'ftp')]}" col="4">
                        <field name="ftp_url" attrs="{'required': [('destination', '=', 'ftp')]}"/>
                        <field name="ftp_port" attrs="{'required': [('destination', '=', 'ftp')]}"/>
                        <field name="ftp_login" attrs="{'required': [('destination', '=', 'ftp')]}"/>
                        <field name="ftp_password" password="True"
                               attrs="{'required': [('destination', '=', 'ftp')]}"/>
                        <field name="ftp_path" attrs="{'required': [('destination', '=', 'ftp')]}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="button_action_validate" type="object" string="Export" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_move_export_wizard_result_form" model="ir.ui.view">
        <field name="name">account_move_export_wizard_result_form</field>
        <field name="model">account.move.export.wizard</field>
        <field name="priority">9999</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="data_fname" invisible="1"/>
                    <field name="binary_export" filename="data_fname" readonly="1"/>
                </group>
                <footer>
                    <button string="Close" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="account_move_export_wizard_action" model="ir.actions.act_window">
        <field name="name">Export account move lines</field>
        <field name="res_model">account.move.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="account_export_menu"
              name="Export"
              parent="account.menu_finance"
              sequence="10"/>

    <menuitem id="account_move_export_wizard_menu"
              parent="account_export_menu"
              action="account_move_export_wizard_action" 
              sequence="50"/>
</odoo>