<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_export_view_move_line_form" model="ir.ui.view">
        <field name="name">account_move_export_view_move_line_form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]/group" position="inside">
                <group string="Export">
                    <field name="exported"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_move_export_view_move_line_tree" model="ir.ui.view">
        <field name="name">account_move_export_view_move_line_tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="full_reconcile_id" position="after">
                <field name="exported"/>
            </field>
        </field>
    </record>

    <record id="account_move_export_view_account_move_line_filter" model="ir.ui.view">
        <field name="name">account_move_export_view_account_move_line_filter</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <filter name="receivable" position="after">
                <separator/>
                <filter name="filter_exported" string="Exported" domain="[('exported', '=', True)]"/>
            </filter>
            <group position="inside">
                <filter name="group_by_exported" string="Exported" context="{'group_by': 'exported'}"/>
            </group>
        </field>
    </record>
</odoo>