<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_invoice_form_form_inherit">
            <field name="name">view_invoice_form_form_inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="origin_sale_order_id" attrs="{'invisible': [('origin_sale_order_id','=',False)]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="invoice_supplier_form_inherit">
            <field name="name">invoice_supplier_form_inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="origin_purchase_order_id" attrs="{'invisible': [('origin_purchase_order_id','=',False)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>