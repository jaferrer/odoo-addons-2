<?xml version="1.0"?>
<odoo>

    <record id="sale_order_dunning_form_view" model="ir.ui.view">
        <field name="name">sale.order.dunning.form</field>
        <field name="model">sale.order.dunning</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_print_dunning" type="object" string="Print Dunning" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_print_dunning" type="object" string="Print Dunning"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="action_send_mail" type="object" string="Send Dunning" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_send_mail" type="object" string="Send Dunning"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="action_done" type="object" string="Validate Dunning"
                            attrs="{'invisible': [('state', '!=', 'send')]}"/>
                    <button name="action_cancel" type="object" string="Cancel Dunning"
                            attrs="{'invisible': [('state', 'in', ('send', 'cancel', 'done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,send,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"
                                   attrs="{'readonly': ['|', ('state', '!=', 'draft'), ('sequence_id', '!=', False)]}"/>
                            <field name="user_id"/>
                            <field name="sequence_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_done" attrs="{'invisible': [('date_done', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="dunning_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="report_id"/>
                            <field name="mail_template_id"/>
                        </group>
                    </group>
                    <field name="note" nolabel="1"/>
                    <field name="order_ids"
                           domain="[('partner_id', '=', partner_id), ('state', '=', 'sent')]"
                           attrs="{'invisible': ['|', ('partner_id', '=', False), ('dunning_type_id', '=', False)], 'readonly': [('state', '!=', 'draft')]}">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="confirmation_date"/>
                            <field name="amount_total"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_dunning_tree_view">
        <field name="name">sale.order.dunning.tree</field>
        <field name="model">sale.order.dunning</field>
        <field name="arch" type="xml">
            <tree string="Dunning Tree"
                  decoration-muted="state == 'done'"
                  decoration-warning="not date_done and next_dunning_date == current_date"
                  decoration-danger="not date_done and next_dunning_date &lt; current_date">
                <field name="name"/>
                <field name="dunning_type_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="next_dunning_date"/>
                <field name="date_done"/>
                <field name="state"/>
                <field name="attachment_count" invisible="1"/>
                <button name="action_see_attachments" type="object" icon="fa-paperclip" attrs="{'invisible':[('attachment_count', '&lt;', 1)]}"/>
                <button name="action_print_dunning" type="object" icon="fa-print"/>
                <button name="action_send_mail" type="object" icon="fa-envelope-o" attrs="{'invisible':[('state', '=', 'done')]}"/>
                <button name="action_done" type="object"  icon="fa-check" style="color: green;" attrs="{'invisible':[('state', '=', 'done')]}"/>
                <button name="action_cancel" type="object" icon="fa-times" attrs="{'invisible':[('state', 'in', ['done', 'cancel'])]}"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_dunning_search_view" model="ir.ui.view">
        <field name="name">sale.order.dunning.search</field>
        <field name="model">sale.order.dunning</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="dunning_type_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <filter name="to_do" string="À faire" domain="[('state', 'in', ['draft', 'sent']), ('next_dunning_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="sent" string="Sent" domain="[('state', '=', 'send')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="cancel" string="Cancel" domain="[('state', '=', 'cancel')]"/>
                <group string="Group by...">
                    <filter name="group_partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_dunning_type_id" string="Dunning Type"
                            context="{'group_by': 'dunning_type_id'}"/>
                    <filter name="group_company_id" string="Company" context="{'group_by': 'company_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_user_id" string="Responsible" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dunning_view_action">
        <field name="name">Dunnings</field>
        <field name="res_model">sale.order.dunning</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_to_do':True}</field>
    </record>

    <menuitem name="Dunnings"
              id="menu_sale_order_dunning_action"
              parent="sales_team.menu_sales"
              sequence="150"
              action="dunning_view_action"/>

    <record model="ir.cron" id="sale_order_dunning_cron">
        <field name="name">Mise à jour des relances commerciales (devis)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model" eval="'sale.order.dunning'"/>
        <field name="function" eval="'cron_sale_order_dunning_update'"/>
        <field name="args" eval="'()'"/>
        <field name="active" eval="True"/>
    </record>

</odoo>