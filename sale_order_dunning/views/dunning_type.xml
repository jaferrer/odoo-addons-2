<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="sale_order_dunning_type_tree_view">
        <field name="name">sale.order.dunning.type.tree</field>
        <field name="model">sale.order.dunning.type</field>
        <field name="arch" type="xml">
            <tree string="Dunning Type Tree" editable="top">
                <field name="name"/>
                <field name="number"/>
                <field name="delay_next_dunning_date"/>
                <field name="company_id"/>
                <field name="report_id"/>
                <field name="mail_template_id"/>
                <field name="sequence_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="relance_config_action">
        <field name="name">Dunning Type</field>
        <field name="res_model">sale.order.dunning.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Dunning Type"
              id="menu_relance_config"
              parent="sales_team.menu_sale_config"
              action="relance_config_action"/>

</odoo>

